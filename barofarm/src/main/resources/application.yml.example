solapi:
  api-key: "YOUR_API_KEY"
  api-secret: "YOUR_API_SECRET"
  from: "YOUR_PHONE_NUMBER"

spring:
  mail:
    host: smtp.naver.com
    port: 587
    username: YOUR_EMAIL
    password: YOUR_PASSWORD
    properties:
      mail:
        smtp:
          auth: true
          starttls:
            enable: true
    default-encoding: UTF-8

# 리뷰 이미지 파일 업로드 용량 설정
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 50MB

management:
  endpoints:
    web:
      exposure:
        include: health
  endpoint:
    health:
      probes:
        enabled: true

server:
  tomcat:
    max-http-form-post-size: 50MB
      
    
cloud:
  aws:
    credentials:
      access-key: YOUR_ACCESS_KEY
      secret-key: YOUR_SECRET_KEY
    region:
      static: ap-northeast-2
    s3:
      bucket: barofarm-images
    stack:
      auto: false
    
portone:
  api-secret: "YOUR_API_KEY" # API Secret키 
  webhook-secret: "YOUR_SECRET"  # 시크릿 키
  
nts:
  api:
    service-key: "YOUR_API_KEY"
    base-url: "https://api.odcloud.kr/api/nts-businessman/v1"

naver:
  datalab:
    client-id: "YOUR_CLIENT_ID"
    client-secret: "YOUR_CLIENT_SECRET"
    
admin:
  secret-key: "SECRET_KEY"
